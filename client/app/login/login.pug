form.container.centered((keypress.enter)='login()',
    [ngClass]="{ 'validated': validated && !submitted }",
    autocomplete='off'
)
    .row
        .col-sm-8.col-sm-offset-2.col-lg-6.col-lg-offset-3
            .panel.panel-default.form
                .panel-heading
                    h4.text-center
                        span Kullanıcı Girişi
                .panel-body
                    .form-group
                        label(for='username') Kullanıcı Adı:
                        input#username.form-control(type='text',
                            name='username',
                            minlength='3',
                            maxlength='50',
                            required,
                            [(ngModel)]='username',
                            (keydown.space)='$event.preventDefault();',
                            autofocus
                        )
                    .form-group
                        label(for='password') Parola:
                        input#password.form-control(type='password',
                            name='password',
                            required,
                            [(ngModel)]='password',
                            (keydown.space)='$event.preventDefault();'
                        )
                    p.mb-0
                        a.btn.btn-success.btn-sm.hidden-xs(href='/auth/twitter')
                            i.fa.fa-twitter
                            | &nbsp;                             
                            | Twitter ile bağlan 
                        span.hidden-xs &nbsp;&nbsp;
                        a.btn.btn-warning.btn-sm(routerLink='/parolami-unuttum')
                            i.fa.fa-question
                            | &nbsp;                             
                            | Parolamı unuttum
                .panel-footer
                    .row
                        .col-xs-12.col-md-6.captcha-col
                            captcha([text]='captcha', (onChange)="captcha = $event.value")                            
                        .col-xs-12.visible-xs.visible-sm &nbsp;
                        .col-xs-12.col-md-6.text-right
                            button.btn.btn-default(type='button', (click)='register()')
                                | Kayıt Ol
                            | &nbsp;&nbsp;
                            button.btn.btn-primary(type='submit', (click)='login()', [disabled]='submitted')
                                span(*ngIf='!submitted') Giriş Yap
                                i.fa.fa-spinner.fa-spin(*ngIf='submitted')
